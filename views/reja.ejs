<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>REJA</title>
  <!-- Linking Bootstrap CSS from CDN -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
    crossorigin="anonymous"
  />
  <!-- Including Axios library for making HTTP requests -->
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
</head>
<body style="background-color: #b8bbd1">
  <div class="container">
    <!-- Main heading -->
    <h1 class="display-4 text-center py-1">REJA VA MAQSADLAR</h1>
    <div class="jumbotron p-3 shadow-sm">
      <!-- Form for adding new items -->
      <form id="create-form" action="/create-item" method="POST">
        <div class="d-flex align-items-center">
          <!-- Input field for new item -->
          <input
            id="create-field"
            name="reja"
            autofocus
            autocomplete="off"
            class="form-control mr-3"
            type="text"
            style="flex: 1"
          />
          <!-- Button to submit the form and add a new item -->
          <button class="btn btn-primary" style="border-radius: 20px">Yangi Reja Qo'shish</button>
        </div>
      </form>
    </div>
    <!-- List of existing items -->
    <ul id="item-list" class="list-group pb-5">
      <!-- Using EJS templating to render items -->
      <% items.map((item) => { %>
        <li class="list-group-item list-group-item-info d-flex align-items-center justify-content-between">
          <!-- Displaying item text -->
          <span class="item-text"><%= item.reja %></span>
          <div>
            <!-- Button for editing an item -->
            <button data-id="<%= item._id %>" class="edit-me btn btn-secondary btn-sm mr-1">O'zgartirish</button>
            <!-- Button for deleting an item -->
            <button data-id="<%= item._id %>" class="delete-me btn btn-danger btn-sm">O'chirish</button>
          </div>
        </li>
      <% }) %>
    </ul>
    <!-- Button to delete all items -->
    <button id="clean-all" class="btn btn-danger" style="border-radius: 20px">Hamma Rejalarni O'chirish</button>
  </div>
  <!-- Including custom JavaScript -->
  <script src="/browser.js"></script>
</body>
</html>
